<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <!-- Biometric authentication -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <!-- Bluetooth permissions for BLE -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />

    <uses-feature android:name="android.hardware.bluetooth_le" android:required="false" />

    <!-- Permissions for Camera and Storage -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" /> <!-- Queries for Camera Intent - Required for Android 11+ -->
    <queries>
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
        <intent>
            <action android:name="android.intent.action.PICK" />

            <data android:mimeType="image/*" />
        </intent>
    </queries>

    <application
        android:name=".ParkMateApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/parkmate_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/parkmate_round_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.CapstoneProject_ParkMate"
        android:usesCleartextTraffic="true"
        android:hardwareAccelerated="true"
        android:largeHeap="true">
        <activity
            android:name=".activity.WalletActivity"
            android:exported="false" />
        <activity
            android:name=".activity.BLEToggleActivity"
            android:exported="false" />
        <activity
            android:name=".activity.TopUpActivity"
            android:exported="false" />
        <activity
            android:name=".activity.TransactionHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".activity.VehicleActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ViewVehicleDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activity.EditVehicleActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AddVehicleActivity"
            android:exported="false" />
        <activity
            android:name=".activity.VerifyCccdActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AccountQrActivity"
            android:exported="false" /> <!-- FileProvider for Camera -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".activity.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activity.EditProfileActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.HomeActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".activity.MapActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activity.RegisterActivity"
            android:exported="false" /> <!-- Parking Activities -->
        <activity
            android:name=".activity.ParkingLotsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SearchParkingActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.ParkingLotDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ParkingMapViewActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AllRatingsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MyRatingsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.VehicleSelectionActivity"
            android:exported="false" />
        <!-- Reservation Activities -->
        <activity
            android:name=".activity.ReservationConfirmActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ReservationDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ReservationListActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ParkingHistoryActivity"
            android:exported="false" />
        <!-- Subscription Activities -->
        <activity
            android:name=".activity.SubscriptionSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SubscriptionLocationSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SubscriptionSummaryActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SubscriptionSuccessActivity"
            android:exported="false" />
        <activity
            android:name=".activity.UserSubscriptionListActivity"
            android:exported="false"
            android:parentActivityName=".activity.ProfileActivity" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Notification Activity -->
        <activity
            android:name=".activity.NotificationActivity"
            android:exported="false" />

        <!-- Firebase Cloud Messaging Service -->
        <service
            android:name=".service.ParkMateFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>