<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="#E4E7EC"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Icon giao dịch -->
        <ImageView
            android:id="@+id/ivTransactionIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:background="@drawable/bg_image_placeholder"
            android:src="@drawable/ic_arrow_upward_24"
            android:contentDescription="@string/transaction_icon_description"
            app:tint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Tiêu đề giao dịch -->
        <TextView
            android:id="@+id/tvTransactionTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="#101828"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tvTransactionAmount"
            app:layout_constraintStart_toEndOf="@+id/ivTransactionIcon"
            app:layout_constraintTop_toTopOf="@+id/ivTransactionIcon"
            tools:text="Nạp tiền vào ví" />

        <!-- Thời gian giao dịch -->
        <TextView
            android:id="@+id/tvTransactionDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#667085"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/tvTransactionTitle"
            app:layout_constraintStart_toStartOf="@+id/tvTransactionTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvTransactionTitle"
            tools:text="10/10/2025 14:30" />

        <!-- Số tiền giao dịch -->
        <TextView
            android:id="@+id/tvTransactionAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#16A34A"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTransactionTitle"
            tools:text="+500.000đ" />

        <!-- Trạng thái giao dịch -->
        <TextView
            android:id="@+id/tvTransactionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#667085"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTransactionAmount"
            android:layout_marginTop="4dp"
            tools:text="Thành công" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
