<?xml version="1.0" encoding="utf-8"?>
<!-- Step 3: Tải ảnh CCCD -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="24dp">

        <!-- Step Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chụp hoặc tải lên ảnh CCCD/CMND của bạn"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- Front Image Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mặt trước CCCD"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFrontImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/divider"
            app:strokeWidth="2dp"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivFrontImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:contentDescription="Ảnh mặt trước CCCD" />

                <LinearLayout
                    android:id="@+id/llFrontImagePlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_stat_card">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_camera"
                            app:tint="@color/primary" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Chạm để chụp/tải ảnh"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pbFrontUpload"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ivFrontUploadSuccess"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="end|top"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="#00E096"
                    android:visibility="gone"
                    android:contentDescription="Upload thành công" />
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Back Image Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mặt sau CCCD"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBackImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/divider"
            app:strokeWidth="2dp"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivBackImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:contentDescription="Ảnh mặt sau CCCD" />

                <LinearLayout
                    android:id="@+id/llBackImagePlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_stat_card">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_camera"
                            app:tint="@color/primary" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Chạm để chụp/tải ảnh"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pbBackUpload"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ivBackUploadSuccess"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="end|top"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="#00E096"
                    android:visibility="gone"
                    android:contentDescription="Upload thành công" />
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Commitment Checkbox -->
        <CheckBox
            android:id="@+id/cbCommitment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tôi cam kết các thông tin trên là chính xác và chịu trách nhiệm về tính xác thực của thông tin"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:padding="8dp" />

    </LinearLayout>
</ScrollView>
