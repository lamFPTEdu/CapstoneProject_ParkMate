<?xml version="1.0" encoding="utf-8"?>
<!-- Modern Cancel Reservation Dialog -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background">

    <!-- Header with Warning Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/error_red"
        android:padding="24dp"
        android:gravity="center">

        <!-- Warning Icon Circle -->
        <FrameLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_circle_white_20">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_close_24"
                app:tint="@color/white"
                android:contentDescription="Hủy" />

        </FrameLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Xác nhận hủy đặt chỗ"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Bạn có chắc muốn hủy đặt chỗ này?"
            android:textSize="13sp"
            android:textColor="#FFFFFFCC"
            android:gravity="center" />

    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/divider"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Parking Lot Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_location_on_24"
                        app:tint="@color/text_secondary"
                        android:contentDescription="Bãi xe"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/tvParkingLotName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vincom Center Parking"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- Time Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_time_24"
                        app:tint="@color/text_secondary"
                        android:contentDescription="Thời gian"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/tvTimeInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00 - 01/07/2024"
                        android:textSize="13sp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginVertical="8dp" />

                <!-- Deposit Fee -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_payment_24"
                        app:tint="@color/primary"
                        android:contentDescription="Phí"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Phí cọc"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvDepositFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10,000đ"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Refund Note -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_stat_card"
            android:padding="12dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_info_24"
                app:tint="@color/success_green"
                android:layout_marginEnd="10dp" />

            <TextView
                android:id="@+id/tvRefundNote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hủy trước 30 phút để được hoàn tiền cọc"
                android:textSize="12sp"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Đóng"
                android:textColor="@color/text_primary"
                android:textAllCaps="false"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@color/divider"
                app:cornerRadius="12dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirm"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Xác nhận hủy"
                android:textAllCaps="false"
                app:backgroundTint="@color/error_red"
                app:cornerRadius="12dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
