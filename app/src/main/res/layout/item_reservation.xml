<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: ID và Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvReservationId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="#123"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chờ xác nhận"
                android:textSize="12sp"
                android:textStyle="bold"
                android:padding="6dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="@drawable/badge_background" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginBottom="12dp" />

        <!-- Thời gian -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_calendar"
                app:tint="@color/text_secondary"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvReservedFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 - 01/07/2024"
                android:textSize="14sp"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Vị trí -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_parking_spot"
                app:tint="@color/text_secondary"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvSpotInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chỗ đỗ: A1-05"
                android:textSize="14sp"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Phí -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_payment_24"
                app:tint="@color/primary"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvReservationFee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4,000đ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/text_secondary" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

