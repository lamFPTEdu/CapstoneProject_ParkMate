<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Clean White Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="2dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Chọn vị trí đỗ xe"
            app:titleTextColor="@color/text_primary"
            app:navigationIconTint="@color/text_primary" />

        <!-- Step Pills Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <!-- Step 1: Floor -->
            <LinearLayout
                android:id="@+id/step1Container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_step_pill_active"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp">

                <View
                    android:id="@+id/step1Circle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/bg_circle_white" />

                <TextView
                    android:id="@+id/step1Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-24dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:minWidth="24dp"
                    android:text="1"
                    android:textColor="@color/primary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/step1Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tầng"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:id="@+id/connector1"
                android:layout_width="16dp"
                android:layout_height="2dp"
                android:background="@color/border_color" />

            <!-- Step 2: Area -->
            <LinearLayout
                android:id="@+id/step2Container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_step_pill_inactive"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp">

                <View
                    android:id="@+id/step2Circle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/bg_circle_gray" />

                <TextView
                    android:id="@+id/step2Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-24dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:minWidth="24dp"
                    android:text="2"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/step2Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khu vực"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:singleLine="true" />

            </LinearLayout>

            <View
                android:id="@+id/connector2"
                android:layout_width="16dp"
                android:layout_height="2dp"
                android:background="@color/border_color" />

            <!-- Step 3: Spot -->
            <LinearLayout
                android:id="@+id/step3Container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_step_pill_inactive"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp">

                <View
                    android:id="@+id/step3Circle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/bg_circle_gray" />

                <TextView
                    android:id="@+id/step3Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-24dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:minWidth="24dp"
                    android:text="3"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/step3Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chỗ đỗ"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:singleLine="true" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Content -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <!-- Hidden TabLayout for ViewPager sync -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone" />

</LinearLayout>
