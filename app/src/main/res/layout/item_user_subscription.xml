<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Parking Lot Name và Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvParkingLotName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vincom Center Parking"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACTIVE"
                android:textSize="12sp"
                android:textStyle="bold"
                android:padding="6dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="@drawable/bg_status_active"
                android:textColor="@color/white" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginBottom="12dp" />

        <!-- Vehicle Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconVehicle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_car_24"
                app:tint="@color/text_secondary"
                android:contentDescription="Xe"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvVehicleInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="51H-12345 • Ô tô"
                android:textSize="14sp"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Package Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconPackage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_card_24"
                app:tint="@color/text_secondary"
                android:contentDescription="Gói"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvPackageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gói tháng - Ô tô"
                android:textSize="14sp"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Spot Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconSpot"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_parking_spot"
                app:tint="@color/text_secondary"
                android:contentDescription="Chỗ đỗ"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvSpotName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chỗ: A-01"
                android:textSize="14sp"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Date Range -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconDate"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_calendar"
                app:tint="@color/text_secondary"
                android:contentDescription="Thời gian"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvDateRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/11/2025 - 01/12/2025"
                android:textSize="14sp"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Price & Days Remaining -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_payment_24"
                app:tint="@color/primary"
                android:contentDescription="Giá"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1,500,000đ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

            <TextView
                android:id="@+id/tvDaysRemaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Còn 15 ngày"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:visibility="visible" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/text_secondary"
                android:contentDescription="Xem chi tiết"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Rating Button (only for EXPIRED status) -->
        <LinearLayout
            android:id="@+id/layoutRatingButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Đánh giá bãi đỗ xe"
                android:textSize="13sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                app:icon="@drawable/ic_rate"
                app:iconTint="@color/primary"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:backgroundTint="@color/primary_light"
                app:strokeWidth="0dp"
                app:cornerRadius="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

        <!-- Renewal Button (only when needRenewalDecision is true) -->
        <LinearLayout
            android:id="@+id/layoutRenewalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRenew"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Gia hạn gói đăng ký"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:icon="@drawable/ic_refresh"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:backgroundTint="@color/primary"
                app:strokeWidth="0dp"
                app:cornerRadius="8dp"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

