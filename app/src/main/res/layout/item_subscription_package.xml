<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Package Name -->
        <TextView
            android:id="@+id/tvPackageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly Car Parking"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#101828"
            tools:ignore="HardcodedText" />

        <!-- Vehicle Type & Duration -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvVehicleType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš— Ã” tÃ´"
                android:textSize="14sp"
                android:textColor="#667085"
                android:background="@drawable/bg_tag"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="1 thÃ¡ng"
                android:textSize="14sp"
                android:textColor="#667085"
                android:background="@drawable/bg_tag"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tvPackageDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Unlimited parking access for cars - 1 month"
            android:textSize="14sp"
            android:textColor="#667085"
            android:maxLines="2"
            android:ellipsize="end"
            tools:ignore="HardcodedText" />

        <!-- Price -->
        <TextView
            android:id="@+id/tvPackagePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="1.500.000â‚«"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

