<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: User info + Rating -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- User Avatar (can show image or initial) -->
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp">

                <!-- Avatar Image -->
                <ImageView
                    android:id="@+id/ivUserAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <!-- Initial Text (fallback) -->
                <TextView
                    android:id="@+id/tvUserInitial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_background_primary"
                    android:gravity="center"
                    android:text="U"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- User Name + Date -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Nguyễn Văn A" />

                <TextView
                    android:id="@+id/tvRatingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    tools:text="26/11/2025" />
            </LinearLayout>

        </LinearLayout>

        <!-- Star Rating -->
        <LinearLayout
            android:id="@+id/layoutStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/star1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star_filled"
                app:tint="@color/rating_star" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/ic_star_filled"
                app:tint="@color/rating_star" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/ic_star_filled"
                app:tint="@color/rating_star" />

            <ImageView
                android:id="@+id/star4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/ic_star_filled"
                app:tint="@color/rating_star" />

            <ImageView
                android:id="@+id/star5"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/ic_star_filled"
                app:tint="@color/rating_star" />
        </LinearLayout>

        <!-- Rating Title -->
        <TextView
            android:id="@+id/tvRatingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Bãi xe ma" />

        <!-- Rating Comment -->
        <TextView
            android:id="@+id/tvRatingComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            android:lineSpacingExtra="2dp"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="Data thì giả, giá thì đắt" />

        <!-- Action Buttons: Edit & Delete -->
        <LinearLayout
            android:id="@+id/layoutActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <!-- Edit Button -->
            <ImageView
                android:id="@+id/btnEditRating"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_edit_24"
                android:padding="6dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Chỉnh sửa đánh giá"
                app:tint="@color/colorPrimary" />

            <!-- Delete Button -->
            <ImageView
                android:id="@+id/btnDeleteRating"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_delete_24"
                android:padding="6dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Xóa đánh giá"
                app:tint="#DC2626" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

