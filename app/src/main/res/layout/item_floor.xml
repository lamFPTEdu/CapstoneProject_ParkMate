<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/colorPrimary"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Floor Icon -->
        <ImageView
            android:id="@+id/ivFloorIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_local_parking_24"
            app:tint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Floor Name -->
        <TextView
            android:id="@+id/tvFloorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:textColor="#101828"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tvAvailableSpots"
            app:layout_constraintStart_toEndOf="@+id/ivFloorIcon"
            app:layout_constraintTop_toTopOf="@+id/ivFloorIcon"
            tools:text="Ground Floor" />

        <!-- Available Spots -->
        <TextView
            android:id="@+id/tvAvailableSpots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvFloorName"
            tools:text="25 spots" />

        <!-- Capacity Info -->
        <TextView
            android:id="@+id/tvCapacityInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#667085"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvFloorName"
            app:layout_constraintTop_toBottomOf="@+id/tvFloorName"
            tools:text="Total: 50 spots â€¢ Car: 20, Motorbike: 30" />

        <!-- Vehicle Types -->
        <TextView
            android:id="@+id/tvVehicleTypes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#667085"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvFloorName"
            app:layout_constraintTop_toBottomOf="@+id/tvCapacityInfo"
            tools:text="ðŸš— Car â€¢ ðŸï¸ Motorbike" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
