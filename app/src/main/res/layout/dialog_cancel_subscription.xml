<?xml version="1.0" encoding="utf-8"?>
<!-- Modern Cancel Subscription Dialog -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background">

    <!-- Header with Warning Icon - Red Theme -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/error"
        android:padding="24dp"
        android:gravity="center">

        <!-- Warning Icon Circle -->
        <FrameLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_circle_white_20">

            <ImageView
                android:id="@+id/iconCancel"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_close"
                app:tint="@color/white"
                android:contentDescription="Hủy đăng ký" />

        </FrameLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Hủy đăng ký vé tháng"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Bạn có chắc chắn muốn hủy đăng ký này?"
            android:textSize="13sp"
            android:textColor="#FFFFFFCC"
            android:gravity="center" />

    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/divider"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Parking Lot Name -->
                <TextView
                    android:id="@+id/tvParkingLotName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vincom Center Parking"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Vehicle Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_car_24"
                        app:tint="@color/text_secondary"
                        android:contentDescription="Xe"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/tvVehicleInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="51H-12345 • Ô tô"
                        android:textSize="13sp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- Package Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_card_24"
                        app:tint="@color/text_secondary"
                        android:contentDescription="Gói"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/tvPackageInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gói tháng - Ô tô"
                        android:textSize="13sp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- Date Range -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/text_secondary"
                        android:contentDescription="Thời hạn"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/tvDateRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01/11/2025 - 01/12/2025"
                        android:textSize="13sp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Refund Policy Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/warning_yellow"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/light_yellow">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <!-- Policy Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_info_24"
                        app:tint="@color/warning_yellow"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quy định hoàn tiền"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- Policy Items -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_check"
                        app:tint="@color/success_green"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hoàn 100% nếu chưa sử dụng"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_check"
                        app:tint="@color/success_green"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hoàn 100% nếu trong nửa đầu thời hạn"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_close"
                        app:tint="@color/error"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Không hoàn nếu đã sử dụng hoặc quá 1/2 thời hạn"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Dynamic No-Refund Warning Card (shown based on status) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardNoRefundWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/error"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/error_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info_24"
                    app:tint="@color/error"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tvNoRefundWarning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn sẽ KHÔNG được hoàn tiền!"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/error" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Dynamic Refund Eligible Card (shown when eligible) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRefundEligible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/success_green"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="#E8F5E9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check"
                    app:tint="@color/success_green"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tvRefundEligible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn sẽ được hoàn 100% tiền vào ví!"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/success_green" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Warning Note -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_info_24"
                app:tint="@color/error"
                android:layout_marginEnd="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sau khi hủy không thể khôi phục lại"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/error" />

        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Quay lại"
                android:textColor="@color/text_primary"
                android:textAllCaps="false"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@color/divider"
                app:cornerRadius="12dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmCancel"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Hủy đăng ký"
                android:textAllCaps="false"
                app:backgroundTint="@color/error"
                app:cornerRadius="12dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
