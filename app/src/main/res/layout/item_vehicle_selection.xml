<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardVehicle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/gray_200"
    app:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center_vertical">

        <!-- Radio Button -->
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbSelectVehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:buttonTint="@color/radio_button_color" />

        <!-- Vehicle Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- License Plate -->
            <TextView
                android:id="@+id/tvVehiclePlate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vehicle_selection_placeholder_plate"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <!-- Brand & Model -->
            <TextView
                android:id="@+id/tvVehicleDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/vehicle_selection_placeholder_desc"
                android:textSize="13sp"
                android:textColor="@color/text_secondary" />

            <!-- Status Warning (for disabled vehicles) -->
            <TextView
                android:id="@+id/tvVehicleStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/vehicle_selection_unavailable"
                android:textSize="12sp"
                android:textColor="@color/error"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Vehicle Type Badge (on the right) -->
        <TextView
            android:id="@+id/tvVehicleType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:background="@drawable/bg_badge_blue"
            android:text="Ô tô"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
