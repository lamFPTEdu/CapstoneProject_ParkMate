<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardVehicle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/border_color"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Vehicle Icon -->
        <ImageView
            android:id="@+id/ivVehicleIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_car"
            android:padding="8dp"
            android:background="@drawable/circle_background_light"
            app:tint="@color/primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Vehicle Info -->
        <LinearLayout
            android:id="@+id/layoutVehicleInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/ivVehicleIcon"
            app:layout_constraintEnd_toStartOf="@id/ivSelected"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- License Plate -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvLicensePlate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29A-12345"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    tools:ignore="HardcodedText" />

                <!-- Default Badge -->
                <TextView
                    android:id="@+id/ivDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mặc định"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/badge_background"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

            <!-- Brand/Model -->
            <TextView
                android:id="@+id/tvVehicleBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Honda Wave Alpha"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="2dp"
                tools:ignore="HardcodedText" />

            <!-- Vehicle Type -->
            <TextView
                android:id="@+id/tvVehicleType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xe máy"
                android:textSize="12sp"
                android:textColor="@color/text_tertiary"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Selected Indicator -->
        <ImageView
            android:id="@+id/ivSelected"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_check_circle"
            app:tint="@color/primary"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

