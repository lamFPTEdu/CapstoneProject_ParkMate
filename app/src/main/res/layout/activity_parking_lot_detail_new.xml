                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:layout_marginBottom="12dp"
                            tools:ignore="HardcodedText" />

                        <!-- RecyclerView for Available Spots -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvAvailableSpots"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/item_available_spot"
                            tools:itemCount="3" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Vehicle Type Tabs & Info Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- TabLayout for Vehicle Types -->
                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tabLayoutVehicleTypes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            app:tabMode="fixed"
                            app:tabGravity="fill"
                            app:tabIndicatorColor="@color/primary"
                            app:tabSelectedTextColor="@color/primary"
                            app:tabTextColor="#667085"
                            app:tabIndicatorHeight="3dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0" />

                        <!-- Content Container -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Subscription Packages Section -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“… GÃ³i vÃ© thÃ¡ng"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                android:layout_marginBottom="12dp"
                                tools:ignore="HardcodedText" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvSubscriptionPackages"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:listitem="@layout/item_subscription_package"
                                tools:itemCount="3" />

                            <TextView
                                android:id="@+id/tvNoSubscription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="KhÃ´ng cÃ³ gÃ³i vÃ© thÃ¡ng cho loáº¡i xe nÃ y"
                                android:textSize="14sp"
                                android:textColor="#9E9E9E"
                                android:gravity="center"
                                android:padding="24dp"
                                android:visibility="gone"
                                tools:ignore="HardcodedText" />

                            <!-- Pricing Rules Section -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’µ Báº£ng giÃ¡"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                android:layout_marginTop="24dp"
                                android:layout_marginBottom="12dp"
                                tools:ignore="HardcodedText" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvPricingRules"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:listitem="@layout/item_pricing_rule"
                                tools:itemCount="2" />

                            <TextView
                                android:id="@+id/tvNoPricing"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="KhÃ´ng cÃ³ báº£ng giÃ¡ cho loáº¡i xe nÃ y"
                                android:textSize="14sp"
                                android:textColor="#9E9E9E"
                                android:gravity="center"
                                android:padding="24dp"
                                android:visibility="gone"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Fixed Action Buttons at Bottom -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardActionButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
