                app:iconGravity="textStart"
                android:layout_marginBottom="6dp"
                tools:ignore="HardcodedText" />

            <!-- Subscribe Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubscribe"
